@model AdminHotelDetailViewModel
    <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" id="myModal">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Model.Hotel.Name</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Hotel details</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Owner</th>
                                        <th>Description</th>
                                        <th>Rating</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>Room Count</th>
                                        <th>Reservation Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="hotelInfoEl">
                                        <td><img class="d-block w-100" src="~/img/HOTEL/@Model.Hotel.Image" /></td>
                                        <td class="text-bold">@Model.Hotel.Name</td>
                                        <td>@Model.Hotel.User.UserName</td>
                                        <td>@Model.Hotel.Description</td>
                                        <td>
                                            <ul class="Model.Hotel-stars text-warning" style="list-style:none; display:flex;">
                                                @{
                                                    int count = 0;
                                                    float rating = Model.Hotel.Rating.Name;
                                                    bool isInteger = Int32.TryParse(rating.ToString(), out int result);
                                                    int intRating = (int)rating;
                                                }
                                                @for (int i = 0; i < intRating; i++)
                                                {
                                                    count++;
                                                    <li><i class="fas fa-star"></i></li>
                                                }
                                                @if (!isInteger)
                                                {
                                                    <li><i class="fas fa-star-half-alt"></i></li>
                                                    count++;
                                                }
                                                @while (count != 5)
                                                {
                                                    count++;
                                                    <li><i class="far fa-star"></i></li>
                                                }
                                                @{
                                                    count = 0;
                                                }
                                            </ul>
                                        </td>
                                        <td>@Model.Hotel.Address</td>
                                        <td>@Model.Hotel.City</td>
                                        <td>@Model.Hotel.RoomCount</td>
                                        <td>@Model.Hotel.ReservationCount</td>
                                        <td>
                                            <a class="btn btn-primary" asp-route-id="@Model.Hotel.Id" asp-controller="AdminHotel" asp-action="Update">Update</a>
                                            <input type="hidden" value="@Model.Hotel.Id" />
                                            <input type="hidden" value="@Model.Hotel.Name" />
                                            <!--Fake Button trigger modal -->
                                            <button type="button" class="btn btn-danger modalBtn">Delete</button>
                                            <a class="btn btn-secondary" asp-route-id="@Model.Hotel.Id" asp-controller="AdminRoom" asp-action="Create">Create Room</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                @if (Model.RoomAndImages.Count != 0)
                {
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Rooms</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Title</th>
                                            <th>Type</th>
                                            <th>Price</th>
                                            <th>Reservation Count</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (RoomAndImage roomImage in Model.RoomAndImages)
                                        {
                                            <tr class="roomInfoEl">
                                                <td><img class="d-block w-100" src="~/img/rooms/@roomImage.Image.Name" /></td>
                                                <td class="text-bold">@roomImage.Room.Name</td>
                                                <td class="text-primary">@roomImage.Room.Title</td>
                                                <td class="text-primary">@roomImage.Room.Type</td>
                                                <td>@roomImage.Room.Price</td>
                                                <td>@roomImage.Room.ReservationCount</td>
                                                <td>
                                                    <a class="btn btn-warning" asp-route-id="@roomImage.Room.Id" asp-controller="AdminRoom" asp-action="Detail">Detail</a>
                                                    <a class="btn btn-primary" asp-route-id="@roomImage.Room.Id" asp-controller="AdminRoom" asp-action="Update">Update</a>
                                                    <input type="hidden" value="@roomImage.Room.Id" />
                                                    <input type="hidden" value="@roomImage.Room.Name" />
                                                    <!--Fake Button trigger modal -->
                                                    <button type="button" class="btn btn-danger roomModalBtn">Delete</button>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div><!-- /.col -->
                }
                else
                {
                    <div class="text-danger">This hotel has no rooms</div>
                }
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!--Hotel Delete modal-->
<!-- Real Button trigger modal -->
<input type="hidden" id="modalActivate" data-bs-toggle="modal" data-bs-target="#exampleModal">
<!--Hotel delete Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user? Hotel: <span class="text-primary" id="hotelInfo"></span>
                <input type="hidden" id="hotelId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteHotel">Delete</button>
            </div>
        </div>
    </div>
</div>
<!--Room Delete modal-->
<!-- Real Button trigger modal -->
<input type="hidden" id="roomModalActivate" data-bs-toggle="modal" data-bs-target="#exampleModalRoom">
<!--Room delete Modal -->
<div class="modal fade" id="exampleModalRoom" tabindex="-1" aria-labelledby="exampleModalLabelRoom" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelRoom">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user? Hotel: <span class="text-primary" id="roomInfo"></span>
                <input type="hidden" id="roomId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteRoom">Delete</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script asp-append-version="true">
        "use strict";
        window.onload = () => {
            // For Deleting Hotel
            let modalBtn = document.querySelector(".modalBtn");
            modalBtn.addEventListener("click", GetUserId);
            jQuery(document).on("click", "#deleteHotel", function (e) {
                $.ajax({
                    method: "Post",
                    url: "https://localhost:44340/Admin/AdminHotel/Delete/" + $("#hotelId").val(),
                    success: function (res) {
                        if (res === "Success") {
                            $(".elToDelete").detach()
                        } else if (res === "Hotel Error") {
                            $(".elToDelete").append(`<span class="text-danger error">
                        First you need to delete the rooms of this hotel
                                   </span>`).removeClass("elToDelete");
                            setTimeout(function () {
                                $(".error").detach();
                            }, 3 * 1000);
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
            // For Deleting Room
            let roomModalBtns = document.querySelectorAll(".roomModalBtn");
            for (let roomModalBtn of roomModalBtns) {
                roomModalBtn.addEventListener("click", GetRoomId);
            }
            modalBtn.addEventListener("click", GetUserId);
            jQuery(document).on("click", "#deleteRoom", function (e) {
                $.ajax({
                    method: "Post",
                    url: "https://localhost:44340/Admin/AdminRoom/Delete/" + $("#roomId").val(),
                    success: function (res) {
                        if (res === "Success") {
                            $(".elToDelete").detach()
                        } else if (res === "Reservation Error") {
                            $(".elToDelete").append(`<span class="text-danger error">
                        First you need to delete the reservations of this room
                                   </span>`).removeClass("elToDelete");
                            setTimeout(function () {
                                $(".error").detach();
                            }, 3 * 1000);
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
        }
        function GetUserId(e) {
            let btn = e.target;
            let HotelName = btn.previousElementSibling.value;
            document.querySelector("#hotelId").value = btn.previousElementSibling
                .previousElementSibling.value;
            document.getElementById("hotelInfo").textContent = HotelName;
            document.querySelector("#modalActivate").click();
            btn.closest(".hotelInfoEl").classList.add("elToDelete");
        }
        function GetRoomId(e) {
            let btn = e.target;
            let roomName = btn.previousElementSibling.value;
            document.querySelector("#roomId").value = btn.previousElementSibling
                .previousElementSibling.value;
            document.getElementById("roomInfo").textContent = roomName;
            document.querySelector("#roomModalActivate").click();
            btn.closest(".roomInfoEl").classList.add("elToDelete");
        }
    </script>

}
