@model UserDetailViewModel
    <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">User</a></li>
                        <li class="breadcrumb-item active">Detail</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">User Details</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.User.Id</td>
                                        <td>@Model.User.UserName</td>
                                        <td>@Model.User.Email</td>
                                        <td>
                                            <a class="btn btn-primary" asp-route-id="@Model.User.Id" asp-action="Update">Update</a>
                                            <!-- Button trigger delete modal -->
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                Delete
                                            </button>
                                            @if (Model.User.IsBlocked)
                                            {
                                                <button type="button" class="btn btn-dark unblock">
                                                    Unblock
                                                </button>
                                            }
                                            else
                                            {
                                                <!-- Button trigger block modal -->
                                                <button type="button" class="btn btn-dark BlockModalBtn">
                                                    Block
                                                </button>
                                            }
                                        </td>
                                        @if (!Model.User.IsHotelUser)
                                        {
                                            <td>
                                                <a class="btn btn-primary" asp-route-id="@Model.User.Id" asp-action="MakeHotelUser">Make Hotel User</a>
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                @if (Model.Reservations.Count != 0)
                {
                    <div class="col-12">

                        <div class="card-header">
                            <h3 class="card-title">Reservaion</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Hotel Name</th>
                                        <th>Room name</th>
                                        <th>Start date</th>
                                        <th>End date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Reservation reservation in Model.Reservations)
                                    {
                                        <tr>
                                            <td>@reservation.Room.Hotel.Name</td>
                                            <td>@reservation.Room.Name</td>
                                            <td>@reservation.StartDate.ToString("dd.MM.yyyy")</td>
                                            <td>@reservation.EndDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                }
                else
                {
                    <div class="card">
                        <!-- /.col -->
                        <div class="col-12">
                            <div class="text-danger">No Reservation</div>
                        </div>
                    </div>
                }
                <div class="card">
                    <!-- /.col -->
                    <div class="col-12">
                        @if (Model.User.Comments.Count == 0)
                        {
                            <span class="text-danger">No comments</span>
                        }
                        else
                        {
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Comments</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Hotel name</th>
                                                <th>Room name</th>
                                                <th>Content</th>
                                                <th>Rating</th>
                                                <th>Added date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Comment comment in Model.User.Comments)
                                            {
                                                <tr>
                                                    <td>@comment.Room.Hotel.Name</td>
                                                    <td>@comment.Room.Name</td>
                                                    <td>@comment.Content</td>
                                                    <td>
                                                        <ul class="hotel-stars" style="list-style:none;">
                                                            @{
                                                                int count = 0;
                                                                float rating = comment.Rating.Name;
                                                                bool isInteger = Int32.TryParse(rating.ToString()
                                                                    , out int result);
                                                                int intRating = (int)rating;
                                                            }
                                                            @for (int i = 0; i < intRating; i++)
                                                            {
                                                                count++;
                                                                <li style="display:inline-block;"><i class="fas fa-star"></i></li>
                                                            }
                                                            @if (!isInteger)
                                                            {
                                                                <li><i style="display:inline-block;" class="fas fa-star-half-alt"></i></li>
                                                                count++;
                                                            }
                                                            @while (count != 5)
                                                            {
                                                                count++;
                                                                <li><i style="display:inline-block;" class="far fa-star"></i></li>
                                                            }
                                                            @{
                                                                count = 0;
                                                            }
                                                        </ul>
                                                    </td>
                                                    <td>@comment.StartDate.ToString("dd.MM.yyyy")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div><!-- /.card -->
                        }
                    </div>
                </div>
            </div> <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!--Delete Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure that you want to delete this user? User: <span class="text-primary">@Model.User.UserName</span>
            </div>
            <input type="hidden" value="@Model.User.Id" id="userId" />
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="deleteUser">Delete</button>
            </div>
        </div>
    </div>
</div>
<!--Trigger block Moda-->
<input type="hidden" class="btn btn-danger" id="blockModalTriggerBtn" data-bs-toggle="modal" data-bs-target="#exampleModalBlock">
<!--Block modal-->
<div class="modal fade" id="exampleModalBlock" tabindex="-1" aria-labelledby="exampleModalLabelBlock" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelBlock">Block User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to block this user? User: <span class="text-primary" id="userInfoBlock">@Model.User.UserName</span>
                <input type="hidden" value="@Model.User.Id" id="userIdBlock" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="blockUser">Block</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script asp-append-version="true">
        "use strict";
        window.onload = () => {
            // For Deleting user
            jQuery(document).on("click", "#deleteUser", function (e) {
                $.ajax({
                    method: "Post",
                    url: "/Admin/User/Delete/" + $("#userId").val(),
                    success: function (res) {
                        if (res) {
                            window.location.replace("/Admin/User");
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
            // For Blocking User
            document.querySelector(".BlockModalBtn").addEventListener("click", function () {
                $("#blockModalTriggerBtn").click();
            });
            jQuery(document).on("click", "#blockUser", function (e) {
                $.ajax({
                    method: "Post",
                    url: "/Admin/User/Block/" + $("#userIdBlock").val(),
                    success: function (res) {
                        if (res) {
                            $(".BlockModalBtn").removeClass("BlockModalBtn").addClass("unblock").text("Unblock");
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
        }
    </script>

}