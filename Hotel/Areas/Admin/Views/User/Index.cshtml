<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" id="myModal">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User list</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">User</a></li>
                        <li class="breadcrumb-item active">Users</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Users</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                    </tr>
                                </thead>
                                <tbody id="result">
                                    @foreach (UserAndRole userAndRole in Model.UsersRoles)
                                    {
                                        <tr class="userInfoEl">
                                            <td class="">@userAndRole.User.Id</td>
                                            <td>@userAndRole.User.UserName</td>
                                            <td>@userAndRole.User.Email</td>
                                            <td>
                                                <select class="form-control">
                                                    @foreach (string role in userAndRole.RolesNames)
                                                    {
                                                        <option>@role</option>
                                                    }
                                                </select>
                                            </td>
                                            <td>
                                                <a class="btn btn-warning " asp-route-id="@userAndRole.User.Id" asp-action="Detail">Detail</a>
                                                <a class="btn btn-primary" asp-route-id="@userAndRole.User.Id" asp-action="Update">Update</a>
                                                <input type="hidden" value="@userAndRole.User.Id" />
                                                <input type="hidden" value="@userAndRole.User.UserName" />
                                                <!--Fake Button trigger modal -->
                                                <button type="button" class="btn btn-danger modalBtn">
                                                    Delete
                                                </button>
                                                @if (userAndRole.User.IsBlocked)
                                                {
                                                    <button type="button" class="btn btn-dark unBlockMobalBtn">
                                                        Unblock
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-dark BlockModalBtn">
                                                        Block
                                                    </button>
                                                }
                                            </td>
                                            @if (!userAndRole.User.IsHotelUser)
                                            {
                                                <td>
                                                    <a class="btn btn-primary" asp-route-id="@userAndRole.User.Id" asp-controller="AdminHotel" asp-action="CreateHotel">Make Hotel User</a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!--Delete modal-->
<!-- Real Button trigger modal -->
<input type="hidden" id="modalActivate" data-bs-toggle="modal" data-bs-target="#exampleModal">
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user? User: <span class="text-primary" id="userInfo"></span>
                <input type="hidden" id="userId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteUser">Delete</button>
            </div>
        </div>
    </div>
</div>
<!--Block modal-->
<!-- Real Button the trigger block modal -->
<input type="hidden" id="BlockModalActivate" data-bs-toggle="modal" data-bs-target="#exampleModalBlock">
<!-- Modal -->
<div class="modal fade" id="exampleModalBlock" tabindex="-1" aria-labelledby="exampleModalLabelBlock" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelBlock">Block User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to block this user? User: <span class="text-primary" id="userInfoBlock"></span>
                <input type="hidden" id="userIdBlock" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="blockUser">Block</button>
            </div>
        </div>
    </div>
</div>
<!--Unblock modal-->
<!-- Real Button trigger the unblock modal -->
<input type="hidden" id="UnBlockModalActivate" data-bs-toggle="modal" data-bs-target="#exampleModalUnBlock">
<!--Unblock Modal -->
<div class="modal fade" id="exampleModalUnBlock" tabindex="-1" aria-labelledby="exampleModalLabelUnBlock" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelUnBlock">Unblock User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to unblock this user? User: <span class="text-primary" id="userInfoUnBlock"></span>
                <input type="hidden" id="userIdUnBlock" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="unBlockUser">Unblock</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script asp-append-version="true">
        "use strict";
        window.onload = () => {
            //Search user with AJAX
            let searchBtn = document.querySelector("#searchUser");
            searchBtn.addEventListener("keyup", GetUsers);
            // For Deleting
            let modalBtns = document.querySelectorAll(".modalBtn");
            for (let modalBtn of modalBtns) {
                modalBtn.addEventListener("click", GetUserId);
            }
            jQuery(document).on("click", "#deleteUser", function (e) {
                $.ajax({
                    method: "Post",
                    url: "User/Delete/" + $("#userId").val(),
                    success: function (res) {
                        if (res === "Success") {
                            $(".elToDelete").detach()
                        } else if (res === "Hotel Error") {
                            $(".elToDelete").append(`<span class="text-danger error">
                            First you need to delete the hotel of this user
                                       </span>`).removeClass("elToDelete");
                            setTimeout(function () {
                                $(".error").detach();
                            }, 3 * 1000);
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
            // For Blocking
            let BlockModalBtns = document.querySelectorAll(".BlockModalBtn");
            for (let blockmodalBtn of BlockModalBtns) {
                blockmodalBtn.addEventListener("click", GetUserIdBlock);
            }
            jQuery(document).on("click", "#blockUser", function (e) {
                $.ajax({
                    method: "Post",
                    url: "User/Block/" + $("#userIdBlock").val(),
                    success: function (res) {
                        if (res) {
                            let el = $(".userToBlock")[0]
                            $(el).removeClass("userToBlock").removeClass("BlockModalBtn")
                                .addClass("unBlockMobalBtn").text("Unblock");
                            el.removeEventListener('click', GetUserIdBlock);
                            el.addEventListener("click", GetUserIdUnBlock);
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
            // For UnBlocking
            let unBlockModalBtns = document.querySelectorAll(".unBlockMobalBtn");
            for (let unBlockmodalBtn of unBlockModalBtns) {
                unBlockmodalBtn.addEventListener("click", GetUserIdUnBlock);
            }
            jQuery(document).on("click", "#unBlockUser", function (e) {
                $.ajax({
                    method: "Post",
                    url: "User/UnBlock/" + $("#userIdUnBlock").val(),
                    success: function (res) {
                        if (res) {
                            let el = $(".userToUnBlock")[0];
                            $(el).removeClass("userToUnBlock").removeClass("unBlockMobalBtn")
                                .addClass("BlockModalBtn").text("Block")
                            el.removeEventListener('click', GetUserIdUnBlock);
                            el.addEventListener("click", GetUserIdBlock);
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
        }
        function GetUsers(e) {
            let el = e.target;
            let xhr = new XMLHttpRequest();
            xhr.open("GET", "https://localhost:44340/Admin/User/Search?userName=" + el.value);
            xhr.send();
            xhr.onload = (e) => {
                if (xhr.status === 200) {
                    let info = "";
                    document.querySelector("#result").innerHTML = "";
                    let json = JSON.parse(xhr.response);
                    let models = json["usersRoles"]
                    for (let model of models) {
                        info = `
                                        <tr class="userInfoEl">
                                            <td class="">${model.user.id}</td>
                                            <td>${model.user.userName}</td>
                                            <td>${model.user.email}</td>`;

                        info += `<td> <select class="form-control">`;
                        for (let role of model.rolesNames) {
                            info += `<option>${role}</option>`;
                        }
                        info += `</select></td>`;
                        info += `
                                            <td>
                                                <a class="btn btn-warning"  href="/Admin/User/Detail/${model.user.id}">Detail</a>
                                                <a class="btn btn-primary" href="/Admin/User/Update/${model.user.id}">Update</a>
                                                <input type="hidden" value="${model.user.id}" />
                                                <input type="hidden" value="${model.user.userName}" />
                                                <!--Fake Button trigger modal -->
                                <button type="button" class="btn btn-danger modalBtn">Delete</button>`;
                        if (model.user.isBlocked) {
                            info += ` <button type="button" class="btn btn-dark unBlockMobalBtn"> Unblock</button>`
                        } else {
                            info += `  <button type="button" class="btn btn-dark BlockModalBtn">Block</button>`
                        }

                        info += `</td>`;
                        if (!model.user.isHotelUser) {
                            info += ` <td><a class="btn btn-primary" href="/Admin/AdminHotel/CreateHotel/${model.user.id}>Make Hotel User</a></td>`;
                        } else {
                            info += ` <td></td>`
                        }
                        info += `</tr>`;

                        document.querySelector("#result").innerHTML += info;
                        let modalBtns = document.querySelectorAll(".modalBtn");
                        for (let modalBtn of modalBtns) {
                            modalBtn.addEventListener("click", GetUserId);
                        }
                        let BlockModalBtns = document.querySelectorAll(".BlockModalBtn");
                        for (let blockmodalBtn of BlockModalBtns) {
                            blockmodalBtn.addEventListener("click", GetUserIdBlock);
                        }
                        let unBlockModalBtns = document.querySelectorAll(".unBlockMobalBtn");
                        for (let unBlockmodalBtn of unBlockModalBtns) {
                            unBlockmodalBtn.addEventListener("click", GetUserIdUnBlock);
                        }
                    }
                }
            }
        }
        function GetUserId(e) {
            let btn = e.target;
            let userName = btn.previousElementSibling.value;
            document.querySelector("#userId").value = btn.previousElementSibling
                .previousElementSibling.value;
            document.getElementById("userInfo").textContent = userName;
            document.querySelector("#modalActivate").click();
            btn.closest(".userInfoEl").classList.add("elToDelete");
        }
        function GetUserIdBlock(e) {
            let btn = e.target;
            let userName = btn.previousElementSibling.previousElementSibling.value;
            document.querySelector("#userIdBlock").value = btn.previousElementSibling.
                previousElementSibling.previousElementSibling.value;
            document.getElementById("userInfoBlock").textContent = userName;
            document.querySelector("#BlockModalActivate").click();
            btn.classList.add("userToBlock")
        }
        function GetUserIdUnBlock(e) {
            let btn = e.target;
            let userName = btn.previousElementSibling.previousElementSibling.value;
            document.querySelector("#userIdUnBlock").value = btn.previousElementSibling
                .previousElementSibling.previousElementSibling.value;
            document.getElementById("userInfoUnBlock").textContent = userName;
            document.querySelector("#UnBlockModalActivate").click();
            btn.classList.add("userToUnBlock")
        }
    </script>

}
