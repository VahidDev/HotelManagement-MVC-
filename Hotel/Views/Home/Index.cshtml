<!-- rooms -->
<section class="hotel-transition-bottom" style="background-color: #fff">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="
									hotel-center
									hotel-title-frame
									hotel-scroll-animation
									hotel-mb-100
								">
                    <h2 class="hotel-mb-20">@Model.HotelShowcaseSection.Title</h2>
                    <p class="hotel-mb-30">
                       @Model.HotelShowcaseSection.Description
                    </p>
                    <a href="~/rooms-1.html" class="hotel-btn hotel-btn-md">Bütün Otaqlar</a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="swiper-container hotel-uni-slider">
                    <div class="swiper-wrapper">
                        @foreach (Room room in Model.Rooms)
                        {
                            <div class="swiper-slide">
                                <!-- room card -->
                                <div class="hotel-room-card hotel-scroll-animation">
                                    <div class="hotel-cover-frame imgLoad">
                                        <a asp-controller="Room" asp-action="Reservation" asp-route-id="@room.Id">
                                            <img class="lozad" src="~/img/rooms/@room.RoomImages.FirstOrDefault().Name" alt="cover" />
                                        </a>
                                        @if (room.Popularity >= PopularityConstants.popular)
                                        {
                                        <div class="hotel-badge">Populyar</div>
                                        }
                                    </div>
                                    <div class="hotel-description-frame">
                                        <div class="hotel-room-features">
                                            <div class="hotel-feature imgLoad">
                                                <div class="hotel-icon-frame">
                                                    <img class="lozad" src="~/img/icons/bed.svg"
                                                         alt="icon" />
                                                </div>
                                                <span>@room.Type Nəfərlik</span>
                                            </div>
                                            <div class="hotel-feature imgLoad">
                                                <div class="hotel-icon-frame">
                                                    <img class="lozad" src="~/img/icons/square.svg"
                                                         alt="icon" />
                                                </div>
                                                <span>@room.Size m²</span>
                                            </div>
                                        </div>
                                        <a asp-controller="Room" asp-action="Reservation" asp-route-id="@room.Id">
                                            <h3 class="hotel-mb-20">@room.Name</h3>
                                        </a>
                                        <div class="
														hotel-text-light
														hotel-text-sm
														hotel-mb-20
													">
                                            @room.Description
                                        </div>
                                        <div class="hotel-card-bottom imgLoad">
                                            <div class="hotel-price">
                                                @room.Price M <span> /gecə</span>
                                            </div>
                                            <a asp-controller="Room" asp-action="Reservation" asp-route-id="@room.Id" class="hotel-btn">
                                                <img class="lozad" src="~/img/icons/bookmark.svg"
                                                     alt="icon" />Rezerv et
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- room card end -->
                            </div>
                        }
                    </div>

                    <!-- slider navigation -->
                    <div class="hotel-uni-slider-nav-panel">
                        <div class="hotel-uni-slider-pagination"></div>
                        <div class="hotel-uni-nav">
                            <div class="hotel-uni-slider-prev">
                                <i class="fas fa-arrow-left"></i>
                            </div>
                            <div class="hotel-uni-slider-next">
                                <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                    <!-- slider navigation end -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- rooms end -->
<!-- testimonials -->
<section class="hotel-transition-top hotel-p-0-80"
         style="background-color: #fff; padding-top: 8rem">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="
									hotel-center
									hotel-title-frame
									hotel-scroll-animation
									hotel-mb-80
								">
                    <h2 class="hotel-mb-20">@Model.HotelCommentSection.Title</h2>
                    <p>
                        @Model.HotelCommentSection.Description
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- slider -->
                <div class="
									swiper-slider
									hotel-testimonials-slider hotel-scroll-animation
								">
                    <div class="swiper-wrapper">
                        @foreach (Comment comment in Model.Comments)
                        {
                            <div class="swiper-slide">
                                <div class="hotel-testimonial-card">
                                    <div class="hotel-avatar-frame imgLoad">
                                        <img class="lozad" src="~/img/faces/3.jpg" alt="Avatar" />
                                    </div>
                                    <div class="hotel-name-and-text">
                                        <h3 class="hotel-mb-10">@comment.FullName</h3>
                                        <div>@comment.Room.Name</div>
                                        <blockquote>
                                            @{
                                                float rating = comment.Rating.Name;
                                                bool isInteger = Int32.TryParse(rating.ToString(), out int result);
                                                int intRating = (int)rating;
                                            }
                                            <ul class="hotel-stars">
                                                @for (int i = 0; i < intRating; i++)
                                                {
                                                    count++;
                                                    <li><i class="fas fa-star"></i></li>
                                                }
                                                @if (!isInteger)
                                                {
                                                    count++;
                                                    <li><i class="fas fa-star-half-alt"></i></li>
                                                }
                                                @while (count != 5)
                                                {
                                                    <li class="hotel-empty">
                                                        <i class="far fa-star"></i>
                                                    </li>
                                                    count++;
                                                }
                                                @{
                                                    count = 0;
                                                }
                                            </ul>
                                            @comment.Content
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="hotel-testimonials-nav">
                        <div class="hotel-testimonials-slider-1-prev">
                            <i class="fas fa-arrow-left"></i>
                        </div>
                        <div class="hotel-testimonials-slider-1-next">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </div>
                </div>
                <!-- slider end -->
            </div>
        </div>
    </div>
</section>
<!-- testimonials end -->
