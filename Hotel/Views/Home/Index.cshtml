@model HomeIndexViewModel
@{
    int count = 0; 
    }
	<!-- banner -->
<section class="hotel-banner imgLoad">
    <div class="hotel-cover-frame">
        <img class="lozad " src="~/img/banners/@Model.HotelBannerSection.BannerImage"
             alt="banner"
             class="hotel-parallax" />
    </div>
    <div class="hotel-overlay"></div>

    <div class="hotel-banner-content">
        <div class="container">
            <div class="hotel-main-title">
                <div class="hotel-white">
                    <ul class="hotel-stars">
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                    </ul>
                    <!-- main-title -->
                    <h1 class="hotel-center hotel-mb-10">
                        @Model.HotelBannerSection.Title
                    </h1>
                    <div class="hotel-mb-30 hotel-center">
                       @Model.HotelBannerSection.Description
                    </div>
                </div>
            </div>
            <div class="hotel-book-form hotel-book-form-2">
                <form asp-action="Reservation">
                    <div class="row align-items-center">
                        <div class="col-12 col-lg-3">
                            <div class="hotel-input-frame hotel-book-form-2">
                                <label asp-for="ReservationStart">Gəliş</label>
                                <input asp-for="ReservationStart"
                                       type="text"
                                       class="datepicker-here"
                                       data-position="bottom left"
                                       placeholder="Tarix seçin"
                                       autocomplete="off"
                                       readonly="readonly" />
                                <div><span class="text-danger" asp-validation-for="ReservationStart"></span></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3">
                            <div class="hotel-input-frame">
                                <label asp-for="ReservationEnd" class="hotel-add-icon">Gediş</label>
                                <input asp-for="ReservationEnd"
                                       type="text"
                                       class="datepicker-here"
                                       data-position="bottom left"
                                       placeholder="Tarix seçin"
                                       autocomplete="off"
                                       readonly="readonly" />
                                <div><span class="text-danger" asp-validation-for="ReservationEnd"></span></div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-3">
                            <div class="hotel-select-frame">
                                <label asp-for="AdultCount">Böyük</label>
                                <select asp-for="AdultCount">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                                <div><span class="text-danger" asp-validation-for="AdultCount"></span></div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-2">
                            <div class="hotel-select-frame">
                                <label asp-for="ChildCount">Uşaq</label>
                                <select asp-for="ChildCount">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                                <div><span class="text-danger" asp-validation-for="ChildCount"></span></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-1 text-center imgLoad">
                            <button type="submit" class="hotel-btn">
                                <img class="lozad" src="~/img/icons/search.svg"
                                     class="hotel-zoom"
                                     alt="icon" /><span>Axtar</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="hotel-scroll-hint-frame">
                <div class="hotel-white hotel-mb-20">Aşağı çəkin</div>
                <a href="~/#hotel-triger-1"
                   class="hotel-scroll-hint knsk-s-s"></a>
            </div>
        </div>
    </div>
</section>
<!-- banner end -->
<!-- features -->
<section id="hotel-triger-1">
    <div class="container">
        <!-- features card -->
        <div class="hotel-features-card" style="margin-top: -80px">
            <div class="row">
                @foreach (Facility facility in Model.Facilities)
                {
                    <div class="col-6 col-lg-3">
                        <!-- icon box -->
                        <div class="hotel-icon-box imgLoad">
                            <img class="lozad" src="~/img/features/@facility.Image"
                                 alt="icon"
                                 class="hotel-mb-10" />
                            <h5>@facility.Name</h5>
                        </div>
                        <!-- icon box end -->
                    </div>
                }

            </div>
        </div>
        <!-- features card end -->
    </div>
</section>
<!-- features end -->
<!-- about -->
<section class="hotel-p-100-100">
    <div class="container">
        <div class="hotel-about-card">
            <div class="row no-gutters">
                <div class="col-lg-6 imgLoad">
                    <div class="hotel-about-photo">
                        <img class="lozad" src="~/img/about/@Model.HotelInfoSection.FirstImage" alt="cover" />
                    </div>
                </div>
                <div class="col-lg-6 align-self-center">
                    <div class="hotel-about-text">
                        <div class="hotel-title-frame">
                            <h2 class="hotel-mb-20">
                                @Model.HotelInfoSection.FirstImageTitle
                            </h2>
                            <p class="hotel-mb-30">
                                @Model.HotelInfoSection.FirstImageDescription
                            </p>
                            <a href="~/about.html" class="hotel-btn hotel-btn-md">Daha Çox</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 order-lg-2 imgLoad">
                    <div class="hotel-about-photo">
                        <img class="lozad" src="~/img/about/@Model.HotelInfoSection.SecondImage" alt="cover" />
                    </div>
                </div>
                <div class="col-lg-6 align-self-center">
                    <div class="hotel-about-text">
                        <div class="hotel-title-frame">
                            <h2 class="hotel-mb-20">
                                @Model.HotelInfoSection.SecondImageTitle
                            </h2>
                            <p class="hotel-mb-30">
                                @Model.HotelInfoSection.SecondImageDescription
                            </p>
                            <a href="~/rooms.html" class="hotel-btn hotel-btn-md">Otaq Seçin</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- about end -->
<!-- gallery -->
<section class="hotel-transition-top hotel-p-0-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="
									hotel-center
									hotel-title-frame
									hotel-scroll-animation
									hotel-mb-100
								">
                    <h2 class="hotel-mb-20">@Model.HotelTransitionSection.Title</h2>
                    <p class="hotel-mb-30">
                       @Model.HotelTransitionSection.Description
                    </p>
                </div>
            </div>
            <div class="col-lg-12">
                <!-- slider -->
                <div class="
									swiper-container
									hotel-about-slider hotel-scroll-animation
								">
                    <div class="swiper-wrapper">
                        @foreach (HotelTransitionSectionImage image
                           in Model.HotelTransitionSectionImages)
                        {
                            <div class="swiper-slide imgLoad">
                                <!-- gallery item -->
                                <div class="hotel-image-frame">
                                    <a data-fancybox="gallery"
                                       href="~/img/about/@image.Image">
                                        <img class="lozad" src="~/img/about/@image.Image" alt="about" />
                                        <div class="hotel-badge">Tam ölçüdə bax</div>
                                        <span class="hotel-zoom">
                                            <i class="fas fa-search-plus"></i>
                                        </span>
                                    </a>
                                </div>
                                <!-- gallery item end -->
                            </div>
                        }
                    </div>

                    <!-- slider navigation -->
                    <div class="hotel-slider-nav-panel">
                        <!-- pagination -->
                        <div class="hotel-about-slider-1-pagination"></div>
                        <!-- navigation -->
                        <div class="hotel-about-slider-nav">
                            <div class="hotel-about-slider-1-prev">
                                <i class="fas fa-arrow-left"></i>
                            </div>
                            <div class="hotel-about-slider-1-next">
                                <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                        <!-- navigation end -->
                    </div>
                    <!-- slider navigation end -->
                </div>
                <!-- slider end -->
            </div>
        </div>
    </div>
</section>
<!-- gallery end -->
